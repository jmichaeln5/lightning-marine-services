<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
      <div class="container">
        <br>
        <h2>Sign Up✍️</h2>
        <hr/>
      </div>
    </div>

    <!-- Login Form -->
        <div class="field fadeIn second" name="login" placeholder="login" id="login">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class:"widerTextField" %>
        </div>

        <br/>
        <div class="field fadeIn third" id="password" name="login" >

          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class:"widerTextField" %>

        </div>

        <% if devise_mapping.rememberable? %>
          <br/>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions fadeIn fourth">
          <%= f.submit "Sign Up", id:"formBtn" %>
        </div>
      <% end %>

    <div id="formFooter">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
