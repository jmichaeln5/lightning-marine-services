<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="wrapper fadeInDown">
  <div id="formContent">
    <div class="fadeIn first">
      <div class="container">
        <br>
        <h2>Welcome BackðŸ‘‹ </h2>
        <hr/>
      </div>
    </div>

    <br>

      <button class="btn btn-outline-primary fadeIn fourth">
        <div id="sample-login">
            Click Here to Browse
            <br>
            Sample Account
        </div>
      </button>

    <br><br>

    <div class="field fadeIn second" name="login" placeholder="login" id="login">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class:"widerTextField", id:"add-sample-email" %>
    </div>
    <br/>
    <div class="field fadeIn third" id="password" name="login" >
      <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class:"widerTextField", id:"add-sample-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <br/>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions fadeIn fourth">
      <%= f.submit "Log in", id:"formBtn" %>
    </div>
    <% end %>

    <div id="formFooter">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>

<script type="text/javascript">

  $( "#sample-login" ).click(function() {

    var sampleEmail = "SampleAccount@gmail.com";
    var samplePassword = "sampleaccount";

    $( "#add-sample-email" ).val( sampleEmail );
    $( "#add-sample-password" ).val( samplePassword );
  });
</script>
